# Server configuration
MCP_SCHEDULER_NAME=mcp-scheduler
MCP_SCHEDULER_VERSION=0.1.0
MCP_SCHEDULER_ADDRESS=0.0.0.0
MCP_SCHEDULER_PORT=8080
MCP_SCHEDULER_TRANSPORT=sse
MCP_SCHEDULER_STRICT_JSON=false

# Database configuration
MCP_SCHEDULER_DB_PATH=/data/scheduler.db

# Logging configuration
MCP_SCHEDULER_LOG_LEVEL=INFO
MCP_SCHEDULER_LOG_FILE=/data/mcp_scheduler.log

# Scheduler configuration
MCP_SCHEDULER_CHECK_INTERVAL=5
MCP_SCHEDULER_EXECUTION_TIMEOUT=300

# AI configuration (required for AI tasks)
OPENAI_API_KEY=your-api-key-here
MCP_SCHEDULER_AI_MODEL=gpt-4o

# Optional: Path to JSON configuration file
# MCP_SCHEDULER_CONFIG_FILE=/config/config.json 